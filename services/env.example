############################################
# Application
############################################
NODE_ENV=development
PORT=3000
API_PREFIX=api

############################################
# CockroachDB (SQL Database)
############################################
DATABASE_URL="postgresql://app_user@cockroach:26257/app_db?sslmode=disable"

# Caso o app precise dos campos separados:
COCKROACH_HOST=cockroach
COCKROACH_PORT=26257
COCKROACH_DB=app_db
COCKROACH_USER=app_user
COCKROACH_PASSWORD=   # deixe vazio se estiver usando insecure

############################################
# MongoDB (NoSQL)
############################################
MONGODB_URI="mongodb://mongo:27017/app_db"

############################################
# Redis (Cache / Queue)
############################################
REDIS_HOST=redis
REDIS_PORT=6379

############################################
# MinIO (Object Storage, S3 Compatible)
############################################
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false

# Credenciais
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# Compatibilidade com SDKs
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123

MINIO_BUCKET_NAME=chat4all-files

############################################
# Kafka (Message Broker)
############################################
KAFKA_BROKER=kafka:9092
KAFKA_CLIENT_ID=chat4all-api
KAFKA_CONSUMER_GROUP_ID=chat4all-workers

############################################
# JWT Authentication
############################################
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

############################################
# gRPC
############################################
GRPC_PORT=50051
